generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  SUPER_ADMIN
  USER
}
enum joinStatus {
  PENDING
  APPROVED
  REJECTED
}
