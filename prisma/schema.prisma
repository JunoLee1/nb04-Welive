generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  SUPER_ADMIN
  USER
}
enum JoinStatus {
  PENDING
  APPROVED
  REJECTED
}
model Apartment { // ì•„íŒŒíŠ¸
  id                      String    @id @default(uuid())
  name                    String    @unique
  address                 String
  description             String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime       @updatedAt
  buildingNumberFrom      Int
  buildingNumberTo        Int
  floorCountPerBuilding   Int
  unitCountPerFloor       Int
  officeNumber String
  residents Resident[]  // ðŸ‘ˆ ì£¼ë¯¼ë“¤
  adminId     String    @unique
  admin       User      @relation(fields: [adminId], references: [id])
}

//---------------------------------------------------
model User {
  id        String   @unique @id @default(uuid())
  email     String   @unique
  name      String
  username  String    @unique
  contact   String    @unique
  password  String
  role      Role
  hasNext   Boolean  @default(false)
  joinStatus JoinStatus @default(PENDING)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime       @updatedAt
  approvedAt DateTime? 
  isActive  Boolean  @default(true)
  avatar    String?
  adminOf   Apartment?
  resident  Resident?
}

model Resident { // ìž…ì£¼ë¯¼ ê±°ì£¼ì§€ ì •ë³´
  id          String   @id @default(uuid())
  name        String  
  building    Int
  unit        Int
  createdAt  DateTime     @default(now())
  updatedAt  DateTime       @updatedAt

  isHouseholder Boolean @default(false)
  apartmentId String
  apartment   Apartment @relation(fields: [apartmentId], references: [id])
  
  userId      String    @unique
  user        User      @relation(fields: [userId], references: [id])
}
