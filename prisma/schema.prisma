generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  SUPERADMIN
}
enum joinStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  username  String   @unique
  contact   String
  password  String
  role      Role
  hasNext   Boolean  @default(false)
  joinStatus joinStatus @default(PENDING)
  isActive  Boolean  @default(true)
  avatar    String
  adminOf   Resident[]
}

model Resident {
  id          String    @id @default(uuid())
  name        String
  building    Int
  unit        Int
  isHouseholder Boolean @default(false)
  apartmentId String
  apartment   Apartment @relation(fields: [apartmentId], references: [id])
  adminId     String 
  admin       User     @relation(fields: [adminId], references: [id])

  @@unique([apartmentId, adminId])
}
model Apartment {
  id                      String   @id @default(uuid())
  name                    String
  address                 String
  description             String
  buildingNumberFrom      Int
  buildingNumberTo        Int
  floorCountPerBuilding   Int
  unitCountPerFloor       Int

  residents Resident[]  // ðŸ‘ˆ ì£¼ë¯¼ë“¤
}

